
  <main>
<h2>Edit Activity:</h2>

  <form action="/users/<%= data.id %>?_method=put" method="POST">

    <div>
      <label for="title" class="labels">Title:</label>
      <input type="text" id="title" name="title" value="<%=data.title%>">
    </div>
    <div>
      <label for="category" class="labels">Category:</label>
      <input type="text" id="category" name="category" value="<%=data.category%>">
    </div>
    <div>
      <label for="address" class="labels">Address:</label>
      <input type="text" id="address" name="address" value="<%=data.address%>">
    </div>
    <div>
      <label for="map" class="labels">google map link:</label>
      <input type="text" id="map" name="googleMap" value="<%=data.map%>">
    </div>
    <div>
      <label for="website" class="labels">Website link:</label>
      <input type="text" id="website" name="website" value="<%=data.website%>">
    </div>
    <div>
      <label for="description" class="labels" id="user-notes">Notes:</label>
      <input type="text" id="description" name="description" value="<%=data.description%>">
    </div>
    <div>
      <label for="time" class="labels">Approximate time:</label>
      <input type="text" id="time" name="time" value="<%=data.time%>">
    </div>
    <div>
      <label for="english" class="labels">English:</label>
      <input type="text" id="english" name="english" value="<%=data.english%>">
    </div>    
    <div>
      <label for="price" class="labels">Price:</label>
      <input type="text" id="price" name="price" value="<%=data.price%>">
    </div>  
