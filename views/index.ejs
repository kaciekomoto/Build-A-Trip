
<main>
    <div class="hero-box">
        <h1 id="hero-text">Tokyo
            <!-- <div class="weather-overlay">
                <p class="weather-text">Weather</p>
            </div> -->
        </h1>
    </div>
    <!-- <input type="text" id="search-bar" onkeyup=searchActivities() placeholder="Search...">  -->
    <ul class="filter-bar">
        <li><p>filter by:</p></li>
        <li><a href='/tokyo' class="filter-list-item">all</a></li>
        <li><a href='/tokyo/category/food' class="filter-list-item">food</a></li>
        <li><a href='/tokyo/category/lifestyle' class="filter-list-item">lifestyle</a></li>
        <li><a href='/tokyo/category/entertainment' class="filter-list-item">entertainment</a></li>
        <li><a href='/tokyo/category/culture' class="filter-list-item">culture</a></li>
        <li><a href='/tokyo/category/shopping' class="filter-list-item">shopping</a></li>
        <li><a href='/tokyo/category/nightlife' class="filter-list-item">nightlife</a></li>
     </ul>
    
    <div class="activity-grid">
     <% data.forEach(details => { %>
        <div class="activity-container" id="<%= details.title %>"><a href="/tokyo/<%= details.id %>">
            <img src="<%= details.img%>" alt="picture of <%= details.title %>" class="image-index"/>
            <div class="title-price-location-cat-container">
                <a href="/tokyo/<%= details.id %>" class="text-body title"><%= details.title %></a>
                <hr class="sm-line">
                <p class="text-body" id="genLocation"><%= details.genLocation %></p>
                <div class="price-genLocation-cat-container">
                    <p class="text-body" id="price"><%= details.price %> •</p>
                    <p class="text-body" id="category"><%= details.category %> • </p>
                    <p class="text-body" id="time"><%= details.time %></p>
                </div>
            </div>
            <!-- <div class="tips-container">
                <img class="text-body" id="tips-icon" src="/img/Kacies_Tips_Icons.png" alt="Kacies-Tips-Icon">
                <p class="text-body" id="tips"><%= details.description %></p>
            </div> -->
            </a>
            <a href="/users/" class="activity-btn add-btn" data-title="<%= details.title %>">+ Add to Itinerary</a>
        </div>
    <% }) %>
    </div>
</main>


