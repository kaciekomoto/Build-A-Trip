<body>
    <main>
    <ul class="filter-bar">
        <li><p>filter by:</p></li>
        <li><a href='/tokyo' class="filter-list-item">all</a></li>
        <li><a href='/tokyo/category/food' class="filter-list-item">food</a></li>
        <li><a href='/tokyo/category/lifestyle' class="filter-list-item">lifestyle</a></li>
        <li><a href='/tokyo/category/entertainment' class="filter-list-item">entertainment</a></li>
        <li><a href='/tokyo/category/culture' class="filter-list-item">culture</a></li>
        <li><a href='/tokyo/category/shopping' class="filter-list-item">shopping</a></li>
     </ul>
     <% data.forEach(details => { %>
        <div class="activity-container">
            <div class="title-price-container">
                <h2 class="text-body" id="title"><%= details.title %></h2>
                <p class="text-body" id="price"><%= details.price %></p>
            </div>
            <div class="location-container">
                <p class="text-body" id="address"><%= details.address %></p>
                <a href="<%= details.googleMap %>" class="text-body" id="google-map" >View on Google Maps ></a>
            </div>
                <p class="text-body" id="time">
                <span class="labels">Approximate Time for Activity:</span>
                <%= details.time %>
            </p>
            <ul class= "activity-controls">
                <li><a href="/tokyo/<%= details.id %>" class="activity-btn" id="read-more-btn">Read More</a></li>
                <li><a href="/tokyo/####" class="activity-btn" id="add-btn">Add to Itinerary</a></li>
            </ul>
        </div>
            <% }) %>
    </main>
</body>